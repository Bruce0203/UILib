{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "UI Library",
  "description": "Simple UI Library for Minecraft Fabric Mod Loader",
  "authors": [
    "Project Forceload"
  ],
  "contact": {
    "homepage": "https://github.com/forceload",
    "issues": "https://github.com/forceload/UILib/issues",
    "sources": "https://github.com/forceload/UILib"
  },
  "license": "MIT License",
  "icon": "assets/${mod_id}/textures/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.github.forceload.${mod_id}.UILib"
      }
    ]
  },

  "mixins": [
    "${mod_id}.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${fabricloader}",
    "fabric": ">=${fabric_api}",
    "fabric-language-kotlin": ">=${fabric_language_kotlin}",
    "minecraft": ">=${minecraft}",
    "java": ">=${java}"
  }
}